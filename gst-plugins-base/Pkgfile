# Description:	GStreamer streaming media framework base plug-ins
# URL:		https://gstreamer.freedesktop.org
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	alsa-lib cdparanoia gobject-introspection graphene gstreamer gtk3 libice libogg libsm libtheora libvorbis libxv mesa opus orc

name=gst-plugins-base
version=1.20.0
release=1
source=(https://gstreamer.freedesktop.org/src/${name}/${name}-${version}.tar.xz)

build() {
	cd ${name}-${version}

	build-meson \
		-Dalsa=enabled \
		-Dintrospection=enabled \
		-Dnls=disabled \
		-Dpackage-name="GStreamer (SAUX Aarch64)" \
		-Dpackage-origin="https://github.com/sajcho/" \
		. build

	meson compile ${JOBS:+-j ${JOBS}} -v -C build

	DESTDIR=$PKG meson install --no-rebuild -C build
}
