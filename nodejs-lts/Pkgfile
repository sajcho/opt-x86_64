# Description:	JavaScript runtime built on V8 engine - LTS version name 'iron'
# URL:		https://nodejs.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	brotli c-ares icu

name=nodejs-lts
_realname=node
version=20.17.0
release=1
source=(https://nodejs.org/download/release/latest-iron/${_realname}-v${version}.tar.xz)

build() {
	cd ${_realname}-v${version}

	CXXFLAGS+=" -Wno-deprecated-declarations"

	./configure \
		--prefix=/usr \
		--ninja \
		--enable-lto \
		--shared-brotli \
		--shared-cares \
		--shared-libuv \
		--shared-nghttp2 \
		--shared-openssl \
		--shared-zlib \
		--with-intl=system-icu \
		--without-corepack \
		--without-npm \
		--experimental-http-parser

	make

	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/doc

	# clean up
	find $PKG -type f \( \
		-name '*.md' -o \
		-name 'TODO.org' -o \
		-name 'ChangeLog' -o \
		-name 'NEWS' \) -delete
}
