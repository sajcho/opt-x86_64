# Description:	rxvt fork with unicode and xft support
# URL:		http://software.schmorp.de/#rxvt-unicode
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	gdk-pixbuf libxft libxt

name=rxvt-unicode
version=9.26
release=0
source=(http://dist.schmorp.de/${name}/${name}-${version}.tar.bz2 \
	gentables.patch \
	rxvt-unicode-kerning.patch)

build() {
	cd ${name}-${version}

	patch -p1 -i $SRC/gentables.patch
	patch -p1 -i $SRC/rxvt-unicode-kerning.patch

        ./configure \
		--prefix=/usr \
		--enable-256-color \
		--enable-font-styles \
		--enable-xim \
		--enable-keepscrolling \
		--enable-selectionscrolling \
		--enable-smart-resize \
		--enable-pixbuf \
		--enable-transparency \
		--enable-frills \
		--enable-perl \
		--enable-mousewheel \
		--enable-text-blink \
		--enable-fading \
		--enable-unicode3 \
		--disable-utmp \
		--disable-wtmp \
		--disable-lastlog \
		--disable-startup-notification

	make

	mkdir -p $PKG/usr/share/terminfo
	make TERMINFO=$PKG/usr/share/terminfo DESTDIR=$PKG install
}
