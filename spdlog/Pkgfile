# Description:	Fast C++ logging library
# URL:		https://github.com/gabime/spdlog
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	fmt

name=spdlog
version=1.12.0
release=2
source=(https://github.com/gabime/${name}/archive/v${version}/${name}-${version}.tar.gz \
	spdlog-1.12.0-circular_q-size-fix.patch \
	spdlog-1.12.0-level_to_string_view-fix.patch)

build() {
	cd ${name}-${version}

	patch -p1 -i $SRC/spdlog-1.12.0-circular_q-size-fix.patch
	patch -p1 -i $SRC/spdlog-1.12.0-level_to_string_view-fix.patch

	mkdir build
	cd build

	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE="None" \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DSPDLOG_BUILD_SHARED=ON \
		-DSPDLOG_FMT_EXTERNAL=ON \
		-DSPDLOG_BUILD_BENCH=OFF \
		-DSPDLOG_BUILD_EXAMPLE=OFF \
		-DSPDLOG_SANITIZE_ADDRESS=OFF \
		-DSPDLOG_BUILD_TESTS=OFF \
		-Wno-dev

	ninja -v

	DESTDIR=$PKG ninja install
}
