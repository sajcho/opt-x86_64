# Description:	i3 compatible window manager for Wayland
# URL:		https://swaywm.org
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	json-c pango swaybg wlroots

name=sway
version=1.7
release=1
source=(https://github.com/swaywm/sway/archive/${version}/${name}-${version}.tar.gz \
	sway.desktop)

build() {
	cd ${name}-${version}

	build-meson \
		-Dtray=enabled \
		-Dxwayland=enabled \
		-Dman-pages=enabled \
		-Dgdk-pixbuf=enabled \
		-Dsd-bus-provider=libelogind \
		-Dbash-completions=false \
		-Dfish-completions=false \
		-Dzsh-completions=false \
		-Dwerror=false \
		-Dc_args="-fuse-ld=mold" \
		-Dc_link_args="-fuse-ld=mold" \
		. build

	meson compile ${JOBS:+-j ${JOBS}} -v -C build

	DESTDIR=$PKG meson install --no-rebuild -C build

	install -D -m 0644 $SRC/sway.desktop \
		$PKG/usr/share/wayland-sessions/sway.desktop
}
