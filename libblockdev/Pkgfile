# Description:	Library for manipulating block devices
# URL:		https://github.com/storaged-project/libblockdev
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cryptsetup gobject-introspection keyutils libbytesize libnvme ndctl nss parted volume_key yaml

name=libblockdev
version=3.0.2
release=1
source=(https://github.com/storaged-project/${name}/releases/download/${version}-1/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	./configure \
		--build=$CHOST \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--without-lvm_dbus

	make V=1

	make DESTDIR=$PKG install

	find $PKG -type f -name '*.la' -delete
}
