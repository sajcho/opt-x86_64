# Description:	Image viewer for Sway
# URL:		tps://github.com/artemsen/swayimg
# Maintainer:	ajcho, saux dot aarch64 at gmail dot com
# Depends on:	giflib json-c libexif librsvg libxkbcommon scdoc

name=swayimg
version=1.12
release=1
source=(https://github.com/artemsen/${name}/archive/v${version}/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	build-meson \
		-Dgif=enabled \
		-Djpeg=enabled \
		-Dpng=enabled \
		-Dsvg=enabled \
		-Dexif=enabled \
		-Dwebp=enabled \
		-Djxl=disabled \
		-Dbash=disabled \
		. build

	meson compile ${JOBS:+-j ${JOBS}} -v -C build

	DESTDIR=$PKG meson install --no-rebuild -C build

	install -D -m 0644 extra/swayimgrc $PKG/etc/xdg/${name}/config
}
