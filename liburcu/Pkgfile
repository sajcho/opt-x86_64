# Description:	a LGPLv2.1 userspace RCU (read-copy-update) library
# URL:		https://liburcu.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com

name=liburcu
_realname=userspace-rcu
version=0.14.0
release=1
source=(https://lttng.org/files/urcu/${_realname}-${version}.tar.bz2)

build() {
	cd ${_realname}-${version}

	./configure \
		--build=$CHOST \
		--host=$CHOST \
		--prefix=/usr

	make V=1

	make DESTDIR=$PKG install

	rm -r $PKG/usr/share
}
