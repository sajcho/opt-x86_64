# Description:	cairo-based gtk engine
# URL:		http://www.cimitan.com/murrine/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	gtk2

name=gtk-murrine-engine
_realname=murrine
version=0.98.2
release=0
source=(https://ftp.acc.umu.se/pub/GNOME/sources/${_realname}/${version%.*}/${_realname}-${version}.tar.xz)

build() {
	cd ${_realname}-${version}

	./configure \
		--build=$CHOST \
		--prefix=/usr

	make

	make DESTDIR=$PKG install
}
